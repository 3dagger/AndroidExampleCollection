<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/firstDigitDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/secondDigitDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/firstDigitDays"
                android:clipChildren="false"
                android:clipToPadding="false" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstDigitDays"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="일"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp">

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/firstDigitHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/secondDigitHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/firstDigitHours"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/ddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstDigitHours"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="시"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/firstDigitMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/secondDigitMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/firstDigitMinute"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/ds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstDigitMinute"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="분"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/firstDigitSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false" />

            <kr.dagger.fliptimer.CountDownDigitView
                android:id="@+id/secondDigitSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/firstDigitSecond"
                android:clipChildren="false"
                android:clipToPadding="false" />


            <TextView
                android:id="@+id/sssk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstDigitSecond"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="초"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

    </LinearLayout>


</layout>